<% if @user %>
    <h1><%= @user.full_name %></h1>
    <% if @user.photo %>
        <img src=<%=@user.photo.url%> />
    <% end %>
    <p>Change your profile photo</p>
    <%= render "photos/form" %>

    <div>
        <p>Email: <%= @user.email %></p>
        <p>Age: <%= @user.age %></p>
    </div>

    <h3>You are friend with</h3>
    <ul>
        <% @user.friends.each do |friend| %>
            <li><%= friend.full_name %></li>
        <% end %>
    </ul>
<% end %>

<%= link_to "Back to home page", root_path %>